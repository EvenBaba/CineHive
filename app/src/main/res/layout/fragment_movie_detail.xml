<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.example.cinehive.dataclasses.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F0F4F8">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ImageContrastCheck" />

        <!-- Poster -->
        <ImageView
            android:id="@+id/movie_detail_poster"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{movie.poster_path}"
            app:layout_constraintTop_toBottomOf="@id/back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/movie_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{movie.title}"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A2E"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:text="Inception" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_title">

            <RatingBar
                android:id="@+id/movie_detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:isIndicator="true"
                android:numStars="10"
                android:stepSize="0.1"
                tools:rating="8.5" />

            <TextView
                android:id="@+id/movie_detail_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`(${movie.vote_count} votes)`}"
                android:textColor="#6E7191"
                android:textSize="14sp"
                tools:text="(200 votes)" />
        </LinearLayout>

        <TextView
            android:id="@+id/movie_detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Release Date: ` + movie.release_date}"
            android:textSize="14sp"
            android:textColor="#6E7191"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Release Date: 2010-07-16" />

        <TextView
            android:id="@+id/movie_detail_synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="4dp"
            android:text="@{movie.overview}"
            android:textColor="#1A1A2E"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_release_date"
            tools:text="A thief who steals corporate secrets through the use of dream-sharing technology is given the inverse task of planting an idea into the mind of a C.E.O." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

